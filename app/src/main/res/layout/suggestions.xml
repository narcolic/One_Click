<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:textColor="#9b92b3"
        android:textStyle="bold">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="top"
                android:text="  Museums"
                android:textColor="#9b92b3"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/logo_description"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/a4"
                android:contentDescription="@string/logo_description"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/a5"
                android:contentDescription="@string/logo_description"
                android:src="@drawable/logo" />

            <ListView
                android:id="@+id/the_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect">

        <TextView
            android:id="@+id/boxtitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="   Art"
            android:textColor="#9b92b3"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_vp_item_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Art"
        android:textColor="#9b92b3"
        android:textStyle="bold" />


</LinearLayout>